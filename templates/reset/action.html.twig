{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}

<section class="container">
{% for alert in app.flashes('reset-incorrect') %}
    <div class="alert alert-danger" role="alert">
         {{ alert }}
    </div>

{% endfor %}

{% for alert in app.flashes('reset-success') %}
    <div class="alert alert-success" role="alert">
         {{ alert }}
    </div>

{% endfor %}


{% if resultats != null %}
<div class="container-fluid">
	<div class="row justify-content-center">

    <form method="post">
    					<div class="loginBox">

        <h1>Mot de passe oublié</h1>
        <label class="sr-only" for="password">Entrer un nouveau mot de passe</label>
        <input id="password" name="password" placeholder="password" required type="password">
        {# <input type="hidden" name="token" value="{{ token }}"> #}

        <button type="submit">
            Changer mon mot de passe
        </button>
        </div>
    </form>
    </div>
</div>

{% else %}
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Erreur</h4>
        <p>
            Une erreur s'est produit, aucun token n'a été détecté sur ce compte utilisateur.
        </p>
        <hr>
        <p class="mb-0">
        Contactez l'administrateur du site.</p>
    </div>
{% endif %}
</section>
            
{% endblock %}
