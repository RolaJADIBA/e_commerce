{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="table-responsive-sm">
                <table class="table table-striped text-center mt-5">
                    <thead class="bg-light">
                        <tr>
                        <th scope="col" class="text-info">user email</th>
                        <th scope="col" class="text-warning">numero de commande</th>
                        <th scope="col" class="text-info">date</th>
                        <th scope="col" class="text-warning">montant total</th>
                        <th scope="col" class="text-info">voir les details</th>
                        <th scope="col" class="text-warning">la facture</th>
                        </tr>
                    </thead>
                    {% for panier in paniers %}
                    <tbody>
                        <tr>
                            <td>{{panier.user.email}}</td>
                            <td>{{panier.numeroCommande}}</td>
                            <td>{{panier.date|date("m/d/Y")}}</td>
                            <td>{{panier.montantTotal}}</td>
                            <td><a href="{{path ('commande_details', {'id': panier.id}) }}" class="text-muted">voir les details</a></td>
                            <td><a href="{{path ('genererFactureClients', {'id': panier.id}) }}" class="text-muted">la facture</a></td>
                        </tr>
                    </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
