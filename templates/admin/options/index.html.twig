{% extends 'base_admin.html.twig' %}

{% block title %}Option index{% endblock %}

{% block body %}


<div class="container">

    <div class="row">
        <div class="col-md-9 mb-5">
            <h1>Liste des options ({{ options|length }})</h1>
        </div>
        <div class="col-md-3 mt-3">
                <a href="{{ path('options_new') }}" class="btn btn-info btn-sm">
                <i class="fas fa-plus"></i> Ajouter
                </a>
        </div>
    </div>

    <div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Option Groupe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.nom }}</td>
                <td>{{ option.optionGroupe.nom }}</td>
                <td>
                    <a class="btn btn-info btn-sm" title="Voir option" href="{{ path('options_show', {'id': option.id}) }}">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="btn btn-primary btn-sm" title="Modifier option" href="{{ path('options_edit', {'id': option.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" title="delete le option" href="{{ path('options_delete', {'id': option.id}) }}">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
