{% extends 'base_admin.html.twig' %}

{% block title %}Toutes les cat√©gories{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-md-8 mb-5">
                <h1>Liste des categories ({{ categories|length }})</h1>
            </div>
            <div class="col-md-4 mt-3">
                 <a href="{{ path('categorie_new') }}" class="btn btn-info btn-sm">
                    <i class="fas fa-plus"></i> Ajouter
                 </a>
            </div>
        </div>

    <div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a class="btn btn-info btn-sm" title="Voir categorie" href="{{ path('categorie_show', {'id': categorie.id}) }}">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="btn btn-primary btn-sm" title="Modifier categorie" href="{{ path('categorie_edit', {'id': categorie.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" title="delete le categorie" href="{{ path('categorie_delete', {'id': categorie.id}) }}">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>


{% endblock %}
