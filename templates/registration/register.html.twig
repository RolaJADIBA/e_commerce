{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}

    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="registerBox">
            <img src="{{ asset ('images/register.png') }}" alt="register" class="register">
                <h1>Register</h1>
                <div class="row">
                <div class="col-md-6 mt-3">
                    {{ form_label(registrationForm.nom, 'NOM', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.nom, { 'attr': {'class': 'input', 'placeholder': "Enter your nom"} }) }}

                    {{ form_label(registrationForm.email, 'EMAIL', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.email, { 'attr': {'class': 'input','placeholder': "enter your email"} }) }}
                <div class="row mt-3 ml-3">
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>

                </div>
                <div class="col-md-6 mt-3">

                    {{ form_label(registrationForm.prenom, 'PRENOM', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.prenom, { 'attr': {'class': 'input','placeholder': "Enter your prenom"} }) }}

                    {# {{ form_row(registrationForm.plainPassword) }} #}


                    {{ form_label(registrationForm.plainPassword.first, 'PASSWORD', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'input', 'placeholder': "Enter your password"} }) }}
                    {{ form_label(registrationForm.plainPassword.second, 'CONFIRM PASSWORD', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'input', 'placeholder': "Repeate your password"} }) }}

                </div>

                </div>


                <div class="row justify-content-center mt-5">
                    <button class="btn">Register</button>
                </div>


            </div>
        </div>
    </div>


    {{ form_end(registrationForm) }}

{% endblock %}
